<div class="row">
<% @users.each do |user| %>
  <aside class="col-md-3">
    <section class="user_info">
    <h1>
        <%= gravatar_for(user, 100) %>
      </h1>
      <% unless user == current_user %>
        <h4> <%= user.first_name %> </h4>
        <% unless current_user.friends.include? user %>
        <%= form_for @friendship  do |f| %>
      <p>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :friend_id, value: user.id %>
        <%= f.hidden_field :status, value: false %>
      </p>
      <%= f.submit 'Add Friend' %>
      <% end %>
      <% else %>
      <% friendship = Friendship.where(["friend_id = ? and user_id = ? and status = ?", user.id, current_user.id, true]) %>

      <%= button_to 'Unfriend', friendship_path(friendship), method: :delete %>
      <% end %>
      <% end %>
    </section>
  </aside>
  <% end %>
</div>